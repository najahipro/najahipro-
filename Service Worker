// najahipro Service Worker
const CACHE_NAME = 'najahipro-v1.0.0';
const STATIC_CACHE = 'najahipro-static-v1';
const DYNAMIC_CACHE = 'najahipro-dynamic-v1';

// Ø§Ù„Ù…Ù„ÙØ§Øª Ø§Ù„Ù…Ù‡Ù…Ø© Ø¨Ø§Ø´ ØªØªØ­ÙØ¸ ÙØ§Ù„ÙƒØ§Ø´
const STATIC_ASSETS = [
  '/',
  '/index.html',
  '/style.css',
  '/scripts1.js',
  '/manifest.json',
  'https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap',
  'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css'
];

// ØªØ«Ø¨ÙŠØª Service Worker
self.addEventListener('install', event => {
  console.log('ðŸš€ najahipro SW installing...');
  
  event.waitUntil(
    caches.open(STATIC_CACHE)
      .then(cache => {
        console.log('ðŸ“¦ Caching static assets...');
        return cache.addAll(STATIC_ASSETS);
      })
      .then(() => {
        console.log('âœ… Static assets cached successfully');
        return self.skipWaiting();
      })
      .catch(error => {
        console.error('âŒ Error caching static assets:', error);
      })
  );
});

// ØªÙØ¹ÙŠÙ„ Service Worker
self.addEventListener('activate', event => {
  console.log('ðŸ”„ najahipro SW activating...');
  
  event.waitUntil(
    caches.keys()
      .then(cacheNames => {
        return Promise.all(
          cacheNames.map(cacheName => {
            // Ø­Ø°Ù Ø§Ù„ÙƒØ§Ø´ Ø§Ù„Ù‚Ø¯ÙŠÙ…
            if (cacheName !== STATIC_CACHE && cacheName !== DYNAMIC_CACHE) {
              console.log('ðŸ—‘ï¸ Deleting old cache:', cacheName);
              return caches.delete(cacheName);
            }
          })
        );
      })
      .then(() => {
        console.log('âœ… SW activated and old caches cleaned');
        return self.clients.claim();
      })
  );
});

// Ø§Ù„ØªØ¹Ø§Ù…Ù„ Ù…Ø¹ Ø§Ù„Ø·Ù„Ø¨Ø§Øª
self.addEventListener('fetch', event => {
  const { request } = event;
  
  // ØªØ¬Ø§Ù‡Ù„ Ø§Ù„Ø·Ù„Ø¨Ø§Øª Ø§Ù„Ø®Ø§Ø±Ø¬ÙŠØ© ÙˆØ§Ù„Ù€ POST requests
  if (!request.url.startsWith(self.location.origin) || request.method !== 'GET') {
    return;
  }

  event.respondWith(
    caches.match(request)
      .then(cachedResponse => {
        if (cachedResponse) {
          console.log('ðŸ“¦ Serving from cache:', request.url);
          return cachedResponse;
        }

        // Ø¥Ù„Ø§ Ù…Ø§ ÙƒØ§Ù†Ø´ ÙØ§Ù„ÙƒØ§Ø´ØŒ Ø¬ÙŠØ¨Ùˆ Ù…Ù† Ø§Ù„Ù†Øª
        return fetch(request)
          .then(response => {
            // ØªØ£ÙƒØ¯ Ø£Ù† Ø§Ù„Ø§Ø³ØªØ¬Ø§Ø¨Ø© ØµØ­ÙŠØ­Ø©
            if (!response || response.status !== 200 || response.type !== 'basic') {
              return response;
            }

            // Ø­ÙØ¸ Ø§Ù„Ù†Ø³Ø®Ø© ÙØ§Ù„ÙƒØ§Ø´ Ø§Ù„Ø¯ÙŠÙ†Ø§Ù…ÙŠÙƒÙŠ
            const responseToCache = response.clone();
            
            caches.open(DYNAMIC_CACHE)
              .then(cache => {
                cache.put(request, responseToCache);
                console.log('ðŸ’¾ Cached dynamically:', request.url);
              });

            return response;
          })
          .catch(error => {
            console.log('âŒ Fetch failed, serving offline page:', error);
            
            // Ø¥Ù„Ø§ ÙƒØ§Ù† Ø·Ù„Ø¨ HTML ÙˆÙ…Ø§ Ø®Ø¯Ù…Ø´ØŒ Ø±Ø¯ offline page
            if (request.destination === 'document') {
              return caches.match('/');
            }
            
            // Ù„Ù„ØµÙˆØ± ÙˆØ§Ù„Ù…Ù„ÙØ§Øª Ø§Ù„Ø£Ø®Ø±Ù‰ØŒ Ø§Ø±Ø¬Ø¹ placeholder
            if (request.destination === 'image') {
              return new Response('', { status: 200 });
            }
            
            return new Response('Offline', { 
              status: 503,
              statusText: 'Service Unavailable' 
            });
          });
      })
  );
});

// Ù…Ø¹Ø§Ù„Ø¬Ø© Ø§Ù„Ø±Ø³Ø§Ø¦Ù„ Ù…Ù† Ø§Ù„ØµÙØ­Ø© Ø§Ù„Ø±Ø¦ÙŠØ³ÙŠØ©
self.addEventListener('message', event => {
  const { data } = event;
  
  if (data.type === 'SKIP_WAITING') {
    self.skipWaiting();
  }
  
  if (data.type === 'GET_VERSION') {
    event.ports[0].postMessage({ version: CACHE_NAME });
  }
  
  if (data.type === 'CLEAR_CACHE') {
    caches.keys().then(cacheNames => {
      return Promise.all(
        cacheNames.map(cacheName => caches.delete(cacheName))
      );
    }).then(() => {
      event.ports[0].postMessage({ success: true });
    });
  }
});

// Background Sync (Ù„Ù„Ù…Ø³ØªÙ‚Ø¨Ù„ - Ø­ÙØ¸ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø£ÙˆÙ†Ù„Ø§ÙŠÙ†)
self.addEventListener('sync', event => {
  if (event.tag === 'background-sync') {
    console.log('ðŸ”„ Background sync triggered');
    // Ù‡Ù†Ø§ Ù…Ù…ÙƒÙ† Ù†Ø¶ÙŠÙ sync Ù„Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ù…Ø­ÙÙˆØ¸Ø© locally
  }
});

// Push Notifications (Ù„Ù„Ù…Ø³ØªÙ‚Ø¨Ù„ - Ø¥Ø´Ø¹Ø§Ø±Ø§Øª)
self.addEventListener('push', event => {
  if (event.data) {
    const data = event.data.json();
    console.log('ðŸ“¬ Push notification received:', data);
    
    const options = {
      body: data.body || 'Ø¥Ø´Ø¹Ø§Ø± Ø¬Ø¯ÙŠØ¯ Ù…Ù† najahipro',
      icon: '/icons/icon-192x192.png',
      badge: '/icons/badge-72x72.png',
      tag: 'najahipro-notification',
      requireInteraction: true,
      actions: [
        {
          action: 'open',
          title: 'ÙØªØ­ Ø§Ù„ØªØ·Ø¨ÙŠÙ‚'
        },
        {
          action: 'close',
          title: 'Ø¥ØºÙ„Ø§Ù‚'
        }
      ]
    };
    
    event.waitUntil(
      self.registration.showNotification(data.title || 'najahipro', options)
    );
  }
});

// Ø§Ù„Ù†Ù‚Ø± Ø¹Ù„Ù‰ Ø§Ù„Ø¥Ø´Ø¹Ø§Ø±
self.addEventListener('notificationclick', event => {
  event.notification.close();
  
  if (event.action === 'open' || !event.action) {
    event.waitUntil(
      clients.openWindow('/')
    );
  }
});